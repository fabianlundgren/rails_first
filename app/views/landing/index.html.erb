<ul>
  <% @articles.each do |article| %>
  <li>
    <h2><%= link_to article.title, new_article_comment_path(article.id) %><br /></h2>
    <%= article.content %>
  </li>
  <% if article.comments %>
       <% article.comments.each do |content| %>
           <h4>Comments</h4>
           <%= content.email %><br>
           <%= content.comment %>
       <% end %>
     <% end %>
  <% end %>
</ul>
